{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/jameslairdsmith/iran_worldbank_data/master/current_iran_indicators.csv"
  },
  "width": 500,
  "height": 500,
  "config": {
    "bar": {
      "continuousBandSize": 30
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "scale": {
            "domain": [
              "2010",
              "2022"
            ]
          },
          "axis": {
            "format": "%y",
            "title": "Year ending",
            "grid": false
          }
        },
        "y": {
          "field": "annual_gdp_growth",
          "title": null,
          "type": "quantitative"
        }
      }
    },
    {
      "mark": "text",
      "data": {
        "values": [
          {
            "xpos": "2020",
            "ypos": "9"
          }
        ],
        "format": {
          "parse": {
            "xpos": "date:'%Y'"
          }
        }
      },
      "encoding": {
        "x": {
          "field": "xpos",
          "type": "temporal"
        },
        "text": {
          "value": "Estimates"
        },
        "y": {
          "field": "ypos",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": "rect",
      "data": {
        "values": [
          {
            "start": "2018-06-30",
            "end": "2020-06-30",
            "event": "Estimate"
          },
          {
            "start": "2020-06-30",
            "end": "2022-06-15",
            "event": "Forecast"
          }
        ],
        "format": {
          "parse": {
            "start": "date:'%Y-%m-%d'",
            "end": "date:'%Y-%m-%d'"
          }
        }
      },
      "encoding": {
        "x": {
          "field": "start",
          "type": "temporal"
        },
        "x2": {
          "field": "end",
          "type": "temporal"
        },
        "color": {
          "field": "event",
          "type": "nominal",
          "legend": null
        },
        "opacity": {
          "value": 0.2
        }
      }
    }
  ]
}
